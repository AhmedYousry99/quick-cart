<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/shimmercardView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/shimmerimageViewFavoriteItem"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@android:color/darker_gray"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/shimmertitleFavoriteItem"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shimmercardView2"
            app:layout_constraintTop_toTopOf="@+id/shimmercardView2" />

        <View
            android:id="@+id/shimmerpriceFavoriteItem"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/shimmertitleFavoriteItem"
            app:layout_constraintTop_toBottomOf="@+id/shimmertitleFavoriteItem" />

        <View
            android:id="@+id/shimmerdescriptionFavoritePrice"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/shimmercardView2"
            app:layout_constraintEnd_toStartOf="@+id/shimmerdeleteFavoriteItem"
            app:layout_constraintStart_toStartOf="@+id/shimmerpriceFavoriteItem"
            app:layout_constraintTop_toBottomOf="@+id/shimmerpriceFavoriteItem" />

        <View
            android:id="@+id/shimmerdeleteFavoriteItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>