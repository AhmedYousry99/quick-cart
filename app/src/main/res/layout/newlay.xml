<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/shape_pressed_buttons_default"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Verifying Payment"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Step Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Step 1 Indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/step1_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_wallet" />

            <TextView
                android:id="@+id/step1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Progress Line -->
        <View
            android:layout_width="20dp"
            android:layout_height="2dp" />

        <!-- Step 2 Indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/step2_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_card" />

            <TextView
                android:id="@+id/step2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 2"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar (for overall progress) -->
    <ProgressBar
        android:id="@+id/verification_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:indeterminate="true" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Processing Step 1..."
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp" />

</LinearLayout>
