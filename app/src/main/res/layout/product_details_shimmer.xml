<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/product_details_images_pager1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/titleProductDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alexandria_medium"
            android:text="         "
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_details_images_pager1" />

        <TextView
            android:id="@+id/stockProductDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="         "
            app:layout_constraintStart_toStartOf="@+id/titleProductDetails1"
            app:layout_constraintTop_toBottomOf="@+id/titleProductDetails1" />

        <View
            android:id="@+id/ratingBarProductDetails1"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/titleProductDetails1"
            app:layout_constraintTop_toBottomOf="@+id/stockProductDetails1" />

        <View
            android:id="@+id/increaseQuantityBtnProductDetails1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/decreaseQuantityBtnProductDetails1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/decreaseQuantityBtnProductDetails1" />


        <TextView
            android:id="@+id/currentSelectedQuantityProductDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/decreaseQuantityBtnProductDetails1"
            app:layout_constraintEnd_toStartOf="@+id/increaseQuantityBtnProductDetails1"
            app:layout_constraintTop_toTopOf="@+id/decreaseQuantityBtnProductDetails1" />

        <View
            android:id="@+id/decreaseQuantityBtnProductDetails1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/currentSelectedQuantityProductDetails1"
            app:layout_constraintTop_toTopOf="@+id/ratingBarProductDetails1" />

        <View
            android:id="@+id/divider61"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="@+id/increaseQuantityBtnProductDetails1"
            app:layout_constraintStart_toStartOf="@+id/ratingBarProductDetails1"
            app:layout_constraintTop_toBottomOf="@+id/ratingBarProductDetails1" />

        <TextView
            android:id="@+id/descriptionProductDetails1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alexandria_medium"
            android:text="\n\n\n\n"
            app:layout_constraintEnd_toEndOf="@+id/divider61"
            app:layout_constraintStart_toStartOf="@+id/divider61"
            app:layout_constraintTop_toBottomOf="@+id/divider61" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="      "
            app:layout_constraintStart_toStartOf="@+id/descriptionProductDetails1"
            app:layout_constraintTop_toBottomOf="@+id/descriptionProductDetails1" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/sizesChipGroupProductDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView51"
            app:layout_constraintTop_toBottomOf="@+id/textView51"
            app:singleSelection="true">
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="       "
            app:layout_constraintStart_toStartOf="@+id/textView51"
            app:layout_constraintTop_toBottomOf="@+id/sizesChipGroupProductDetails1" />

        <FrameLayout
            android:id="@+id/favoriteLayoutProductDetails1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1">

            <View
                android:id="@+id/favoriteImageViewProductDetails1"
                android:layout_width="32dp"
                android:layout_height="32dp" />

        </FrameLayout>

        <View
            android:id="@+id/addToCartBtnProductDetails1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/favoriteLayoutProductDetails1"
            app:layout_constraintTop_toTopOf="@+id/favoriteLayoutProductDetails1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>