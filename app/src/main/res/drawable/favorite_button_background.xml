<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/ripple_circular_button.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Default ripple color -->

    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <size android:width="48dp" android:height="48dp"/>
            <solid android:color="@color/light_red"/> <!-- Optional: Mask color for the ripple -->
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="48dp" android:height="48dp"/>
            <solid android:color="@color/grey"/> <!-- Button background color -->
        </shape>
    </item>
</ripple>